<Window
    x:Class="WinUI.Views.FunFact.UpdateFunFactView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:behaviors="clr-namespace:WinUI.Behaviors"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:funFact="clr-namespace:WinUI.ViewModels.FunFact"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:viewModels="clr-namespace:WinUI.ViewModels"
    xmlns:md="https://github.com/fantasticfiasco/mvvm-dialogs"
    Title="UpdateFunFactView"
    Width="800"
    Height="450"
    d:DataContext="{d:DesignInstance funFact:UpdateFunFactViewModel,
                                     IsDesignTimeCreatable=True}"
    md:DialogServiceViews.IsRegistered="True"
    mc:Ignorable="d">
    <Window.Style>
        <Style>
            <Style.Triggers>
                <DataTrigger Binding="{Binding Path=IsClosed}" Value="true">
                    <Setter Property="behaviors:WindowBehavior.Close" Value="true" />
                </DataTrigger>
            </Style.Triggers>
        </Style>
    </Window.Style>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <Label
            Grid.Row="0"
            Grid.Column="0"
            Content="FF name" />
        <TextBox
            Grid.Row="0"
            Grid.Column="1"
            Text="{Binding Path=Item.Title, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
        <Label
            Grid.Row="1"
            Grid.Column="0"
            Content="Content" />
        <TextBox
            Grid.Row="1"
            Grid.Column="1"
            Text="{Binding Path=Item.Content, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
        <Label
            Grid.Row="2"
            Grid.Column="0"
            Content="Upload image" />
        <Button
            Grid.Row="2"
            Grid.Column="1"
            Command="{Binding Path=ImageUploadCommand, Mode=OneWay}"
            Content="Upload" />

        <Button
            Grid.Row="3"
            Grid.Column="1"
            Command="{Binding Path=ImageUploadCommand, Mode=OneWay}"
            Content="Cancel" />
        <Button
            Grid.Row="3"
            Grid.Column="1"
            Command="{Binding Path=OkCommand, Mode=OneWay}"
            Content="Cancel" />
        <Button
            Grid.Row="3"
            Grid.Column="1"
            Command="{Binding Path=CancelCommand, Mode=OneWay}"
            Content="Cancel" />
    </Grid>
</Window>
