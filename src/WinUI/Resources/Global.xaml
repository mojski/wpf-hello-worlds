<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:system="clr-namespace:System;assembly=System.Runtime">
    <ImageSource x:Key="WindowIcon">../Resources/Assets/Icons/favicon.ico</ImageSource>
    <ImageSource x:Key="PlusIcon">../Resources/Assets/Icons/AddClause_16x.png</ImageSource>
    <system:String x:Key="MainWindowTitle">Welcome to Hello FunFact manager</system:String>
    <Style x:Key="ButtonDefaultStyle" TargetType="Button">
        <Setter Property="Width" Value="90" />
        <Setter Property="Height" Value="30" />
    </Style>
    <Style x:Key="LabelDefaultStyle" TargetType="Label">
        <Setter Property="Margin" Value="2" />
        <Setter Property="HorizontalAlignment" Value="Right" />
        <Setter Property="VerticalContentAlignment" Value="Center" />
    </Style>
    <Style x:Key="TextBoxDefaultStyle" TargetType="TextBox">
        <Setter Property="Margin" Value="2" />
    </Style>
</ResourceDictionary>